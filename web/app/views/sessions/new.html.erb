<link rel="stylesheet"  href="/assets/show.scss">
<link rel="stylesheet"  href="/assets/user_profile.scss">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

<header>
  <%= render "layouts/header" %>
</header>

<div class="container py-5 mb-10 mt-5 shadow-lg　">
  <div class="box22">
    <% provide(:title, "Log in") %>

    <div class="col-md-6">
      <h2 class="font-weight-bold font-italic test-black"><i class="fa fa-pinterest-p fa-fw"></i>ログイン</h2>
      <hr>
    </div>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: login_path) do |f| %>

          <i class="fa fa-envelope"></i>
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: 'form-control' %>
          <br>
          <i class="fa fa-unlock-alt"></i>
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: 'form-control' %>
          <br>
          <%= f.submit "ログイン", class: "square_btn" %>
        <% end %>
        <br>
        <br>
        <p>新規登録は<%= link_to "こちら", signup_path %>から</p>
      </div>
    </div>
  </div>
</div>
