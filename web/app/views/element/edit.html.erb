<% provide(:title, 'Sign up') %>
<h1 class="title">ホビコム登録フォーム</h1>
<div class="container">
  <div class="user_data">

    <h2>趣味の編集</h2>
    <h3>趣味解答欄</h3>
    <%= form_for @user, :url => { :controller => :element, :action => :update } do |f| %>
      <%= f.fields_for :users_elements do |fe| %>
        <%= fe.text_field :name, readonly: true %>
        <div class="form-group">
          <%= fe.label :private, class: "control-label col-sm-2" %>
          <span class="col-sm-10">
            <%= fe.check_box :private %>
          </span>
          <%= fe.label :_destroy, class: "control-label col-sm-2" %>
          <span class="col-sm-10">
            <%= fe.check_box :_destroy %>
          </span>
        </div>
      <% end %>

      <h2>趣味の追加</h2>
      <%= render 'add_form' %>
      <%= f.submit "更新", class: "btn btn-primary" %>
    <% end %>

    <br>
    <br>

  </div>
</div>
<style type="text/css">
  .obj-left{
    display:inline-block;
    float:left;
  }
  .obj-right{
    margin-left:30%;
    display:inline-block;
  }
</style>
