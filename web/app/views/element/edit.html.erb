<% provide(:title, 'Sign up') %>
<h1 class="title">ホビコム登録フォーム</h1>
<div class="container">
  <div class="user_data">

    <h2>趣味の編集</h2>
    <h3>趣味解答欄</h3>
    <%= form_for @user, :url => { :controller => :element, :action => :update } do |f| %>

      <%= f.fields_for :elements do |fe| %>
        <%= fe.text_field :name, readonly: true %>
        <div class="form-group">
          <%= fe.label :_destroy, class: "control-label col-sm-2" %>
          <span class="col-sm-10">
            <%= fe.check_box :_destroy %>
          </span>
          <%#= f.fields_for :users_elements do |ue| %>
            <%#= ue.label :private,"公開範囲", class: "control-label col-sm-2" %>
<!--              <span class="col-sm-10">-->
<!--                <%#= ue.radio_button :private ,"true" %>private-->
<!--                <%#= ue.radio_button :private, "false" %>public-->
<!--              </span>-->
          <%# end %>
        </div>
      <% end %>

<!--      趣味のプライベート設定-->
      <%= f.fields_for :users_elements do |ue| %>
        <%= ue.label :private,"公開範囲", class: "control-label col-sm-2" %>
        <span class="col-sm-10">
          <%= ue.radio_button :private ,"true" %>private
          <%= ue.radio_button :private, "false" %>public
        </span>
      <% end %>

      <h2>趣味の追加</h2>
      <%= render 'add_form' %>
      <%= f.submit "更新", class: "btn btn-primary" %>
    <% end %>

    <br>
    <br>

  </div>
</div>
<style type="text/css">
  .obj-left{
    display:inline-block;
    float:left;
  }
  .obj-right{
    margin-left:30%;
    display:inline-block;
  }
</style>
